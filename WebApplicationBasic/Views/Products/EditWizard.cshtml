        }

        /* Conteúdo das tabs */
        .tab-content {
            padding: 30px 20px;
            background: #fff;
            border-radius: 0 0 8px 8px;
        }

        .tab-content > .tab-pane {
            display: none;
        }

        .tab-content > .active {
            display: block;
        }

        /* Categorias */
        .category-item {
            margin: 5px 0;
            padding: 5px 0;
        }

        .category-item label {
            cursor: pointer;
            font-weight: normal;
        }

        .category-item input[type="checkbox"] {
            margin-right: 8px;
        }

        /* Atributos de variação */
        .variant-attribute-panel {
            margin-bottom: 15px;
            border: 2px solid #e9ecef;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .variant-attribute-panel.active {
            border-color: #0d6efd;
