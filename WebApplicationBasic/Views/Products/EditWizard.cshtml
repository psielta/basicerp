        }

        .image-actions button {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.2s;
        }

        .btn-set-main {
            background: #198754;
            color: white;
        }

        .btn-set-main:hover {
            background: #157347;
        }

        .btn-delete-image {
            background: #dc3545;
            color: white;
        }

        .btn-delete-image:hover {
            background: #bb2d3b;
        }

        .main-badge {
            position: absolute;
            top: 8px;
            left: 8px;
            background: #198754;
            color: white;
