        }

        .variant-details-row .card-body {
            padding: 20px;
        }

        .toggle-details {
            padding: 4px 10px;
            line-height: 1.2;
            border-radius: 4px;
        }

        .toggle-details:hover {
            background-color: #e9ecef;
        }

        .toggle-details i {
            transition: transform 0.3s ease;
            font-size: 14px;
        }

        .toggle-details.expanded i {
            transform: rotate(90deg);
        }

        .variant-table tbody tr.variant-row td {
            vertical-align: middle;
            padding: 12px 8px;
        }

        .variant-table .form-control-sm {
            font-size: 0.875rem;
        }

        /* Botões de navegação */
        #prevBtn, #nextBtn, #submitBtn {
            min-width: 120px;
            padding: 10px 25px;
            font-weight: 500;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            #wizardTabs > li > a {
                padding: 12px 10px;
                font-size: 12px;
            }

            #wizardTabs .badge {
                min-width: 24px;
                height: 24px;
                line-height: 24px;
                font-size: 12px;
            }
        }

        /* Estilos do modal de adicionar variação */
        .attribute-selection-group {
            padding: 15px;
            border-radius: 8px;
            border: 1px solid var(--bs-border-color, #e9ecef);
            margin-bottom: 15px;
            background-color: var(--bs-tertiary-bg, #f8f9fa);
        }

        .attribute-selection-group .form-check {
            padding: 8px 12px;
            border: 1px solid var(--bs-border-color, #dee2e6);
            border-radius: 4px;
            transition: all 0.2s;
            cursor: pointer;
            background-color: var(--bs-body-bg, #fff);
        }

        .attribute-selection-group .form-check:hover {
