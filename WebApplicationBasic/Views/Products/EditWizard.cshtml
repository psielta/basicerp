@model WebApplicationBasic.Models.ViewModels.ProductFormViewModel

@{
    ViewBag.Title = "Editar Produto - " + Model.Name;
    var productTypeDisplay = Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple ?
        "Produto Simples" : "Produto com Variações";
}

<h2>Editar Produto</h2>
<p class="text-muted">
    Tipo: <strong>@productTypeDisplay</strong> |
    Slug: <strong>@Model.Slug</strong>
</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>Erros de Validação:</h4>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}

@using (Html.BeginForm("UpdateProduct", "Products", FormMethod.Post, new { id = "editProductForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ProductType)

    <div class="wizard-container">
        <!-- Progress Bar -->
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills nav-justified" id="wizardTabs">
                    <li class="active">
                        <a href="#step1" data-toggle="tab">
                            <span class="badge">1</span> Informações Básicas
                        </a>
                    </li>
                    <li>
                        <a href="#step2" data-toggle="tab">
                            <span class="badge">2</span> Categorias
                        </a>
                    </li>
                    @if (Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Configurable)
                    {
                        <li>
                            <a href="#step3" data-toggle="tab">
                                <span class="badge">3</span> Atributos de Variação
                            </a>
                        </li>
                    }
                    <li>
                        <a href="#step4" data-toggle="tab">
                            <span class="badge">@(Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple ? "3" : "4")</span>
                            @if (Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple)
                            {
                                <text>SKU e Detalhes</text>
                            }
                            else
                            {
                                <text>Variações</text>
                            }
                        </a>
                    </li>
                    <li>
                        <a href="#stepImages" data-toggle="tab">
                            <span class="badge">@(Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple ? "4" : "5")</span> Imagens
                        </a>
                    </li>
                    <li>
                        <a href="#step5" data-toggle="tab">
                            <span class="badge">@(Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple ? "5" : "6")</span> Revisão
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Step 1: Informações Básicas -->
            <div class="tab-pane active" id="step1">
                <h3>Informações Básicas do Produto</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Brand)
                            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Brand, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.WarrantyMonths)
                            @Html.TextBoxFor(m => m.WarrantyMonths, new { @class = "form-control", type = "number", min = "0" })
                            @Html.ValidationMessageFor(m => m.WarrantyMonths, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsService, new { @class = "form-check-input" })
                            <label class="form-check-label">
                                @Html.DisplayNameFor(m => m.IsService)
                            </label>
                        </div>
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsRental, new { @class = "form-check-input" })
                            <label class="form-check-label">
                                @Html.DisplayNameFor(m => m.IsRental)
                            </label>
                        </div>
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.HasDelivery, new { @class = "form-check-input" })
                            <label class="form-check-label">
                                @Html.DisplayNameFor(m => m.HasDelivery)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Ncm)
                            @Html.TextBoxFor(m => m.Ncm, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Ncm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Nbs)
                            @Html.TextBoxFor(m => m.Nbs, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Nbs, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 2: Categorias -->
            <div class="tab-pane" id="step2">
                <h3>Categorias do Produto</h3>
                <p class="text-muted">Selecione uma ou mais categorias para classificar seu produto</p>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">Categorias Disponíveis</div>
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <div id="category-tree">
                                    @if (Model.AvailableCategories != null && Model.AvailableCategories.Any())
                                    {
                                        foreach (var category in Model.AvailableCategories.Where(c => c.ParentId == null))
                                        {
                                            <div class="category-item" data-id="@category.Id">
                                                <label>
                                                    <input type="checkbox" name="SelectedCategoryIds" value="@category.Id"
                                                           @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                                                    @category.Name
                                                </label>
                                                @RenderSubCategories(Model.AvailableCategories, category.Id)
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Nenhuma categoria disponível.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header">Categorias Selecionadas</div>
                            <div class="card-body">
                                <div id="selected-categories">
                                    @if (Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Any())
                                    {
                                        var selectedCats = Model.AvailableCategories.Where(c => Model.SelectedCategoryIds.Contains(c.Id)).ToList();
                                        if (selectedCats.Any())
                                        {
                                            <ul>
                                                @foreach (var cat in selectedCats)
                                                {
                                                    <li>@cat.Name</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Nenhuma categoria selecionada</p>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Nenhuma categoria selecionada</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Configurable)
            {
                <!-- Step 3: Atributos de Variação (apenas para produtos configuráveis) -->
                <div class="tab-pane" id="step3">
                    <h3>Atributos de Variação</h3>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Os atributos abaixo são utilizados para criar variações do produto.
                        Para gerenciar atributos, acesse @Html.ActionLink("Atributos de Variação", "Index", "ProductAttributes", null, new { target = "_blank" }).
                    </div>

                    <div id="variant-attributes-summary">
                        @if (Model.VariantAttributes != null && Model.VariantAttributes.Any(a => a.IsUsedForVariants))
                        {
                            <div class="row">
                                @foreach (var attr in Model.VariantAttributes.Where(a => a.IsUsedForVariants))
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <div class="card-header bg-primary text-white">
                                                <strong>@attr.AttributeName</strong>
                                            </div>
                                            <div class="card-body">
                                                @{
                                                    var usedValues = attr.SelectedValues.Where(v => v.IsSelected).ToList();
                                                }
                                                @if (usedValues.Any())
                                                {
                                                    <p class="mb-1"><strong>Valores em uso:</strong></p>
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var value in usedValues)
                                                        {
                                                            <span class="badge bg-success">@value.Value</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="text-muted mb-0">Nenhum valor em uso</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                Este produto ainda não possui atributos de variação em uso.
                                Adicione variações na próxima aba para definir os atributos.
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.ProductType == WebApplicationBasic.Models.ViewModels.ProductType.Simple)
            {
                <!-- Step 3: SKU e Detalhes (para produtos simples) -->
                <div class="tab-pane" id="step3">
                    <h3>Detalhes do SKU</h3>
                    @Html.HiddenFor(m => m.VariantId)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Sku)
                                @Html.TextBoxFor(m => m.Sku, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Sku, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Barcode)
                                @Html.TextBoxFor(m => m.Barcode, new { @class = "form-control", placeholder = "EAN/GTIN" })
                                @Html.ValidationMessageFor(m => m.Barcode, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Cost)
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input type="text"
                                           class="form-control"
                                           name="Cost"
                                           id="Cost"
                                           value="@Model.Cost"
                                           data-val="true"
                                           data-val-number="O campo Custo deve ser um número."
                                           data-val-range="O campo Custo deve estar entre 0 e 999999.99"
                                           data-val-range-min="0"
                                           data-val-range-max="999999.99" />
                                </div>
                                @Html.ValidationMessageFor(m => m.Cost, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h4>Dimensões e Peso</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Weight)
                                        <div class="input-group">
                                            <input type="text"
                                                   class="form-control"
                                                   name="Weight"
                                                   id="Weight"
                                                   value="@Model.Weight" />
                                            <span class="input-group-text">kg</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Height)
                                        <div class="input-group">
                                            <input type="text"
                                                   class="form-control"
                                                   name="Height"
                                                   id="Height"
                                                   value="@Model.Height" />
                                            <span class="input-group-text">cm</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Width)
                                        <div class="input-group">
                                            <input type="text"
                                                   class="form-control"
                                                   name="Width"
                                                   id="Width"
                                                   value="@Model.Width" />
                                            <span class="input-group-text">cm</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Length)
                                        <div class="input-group">
                                            <input type="text"
                                                   class="form-control"
                                                   name="Length"
                                                   id="Length"
                                                   value="@Model.Length" />
                                            <span class="input-group-text">cm</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                        <label class="form-check-label">
                            @Html.DisplayNameFor(m => m.IsActive)
                        </label>
                    </div>
                </div>

                <!-- Step Images: Imagens (para produtos simples) -->
                <div class="tab-pane" id="stepImages">
                    <h3>Imagens do Produto</h3>
                    <p class="text-muted">Gerencie as imagens do seu produto. Arraste para reordenar.</p>

                    <div class="variant-images-section" data-variant-id="@Model.VariantId">
                        <div class="card">
                            <div class="card-header">
                                <strong>@Model.Name</strong>
                                <span class="badge bg-primary ms-2">SKU: @Model.Sku</span>
                            </div>
                            <div class="card-body">
                                <div class="images-grid sortable" id="images-grid-@Model.VariantId">
                                    <!-- Imagens serão carregadas via JavaScript -->
                                </div>

                                <div class="upload-zone" data-variant-id="@Model.VariantId">
                                    <input type="file" class="file-input" accept="image/*" multiple style="display: none;" />
                                    <div class="upload-content">
                                        <i class="bi bi-cloud-upload" style="font-size: 2rem; color: #6c757d;"></i>
                                        <p class="mb-0 mt-2">Arraste imagens ou clique para selecionar</p>
                                        <small class="text-muted">JPG, PNG, GIF, WebP - Máximo 5MB por imagem</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 4: Revisão (para produtos simples) -->
                <div class="tab-pane" id="step4">
                    <h3>Revisão Final</h3>
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Resumo das Alterações</h5>
                        </div>
                        <div class="card-body" id="product-summary">
                            <!-- Será preenchido via JavaScript -->
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <strong>Importante:</strong> Revise todas as alterações antes de salvar.
                    </div>
                </div>
            }
            else
            {
                <!-- Step 4: Variações (para produtos configuráveis) -->
                <div class="tab-pane" id="step4">
                    <h3>Variações do Produto</h3>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-body-secondary rounded">
                                <p class="mb-2"><strong>Variações Existentes:</strong> @(Model.Variants?.Count ?? 0)</p>
                                @Html.ActionLink("Gerenciar Variantes Detalhadamente", "ManageVariants",
                                    new { id = Model.Id }, new { @class = "btn btn-outline-info btn-sm", target = "_blank" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#addVariantModal">
                                <i class="bi bi-plus-circle"></i> Adicionar Nova Variação
                            </button>
                        </div>
                    </div>

                    <div id="existing-variants">
                        @if (Model.Variants != null && Model.Variants.Any())
                        {
                            <h4>Variantes Atuais</h4>
                            <p class="text-muted small">
                                <i class="bi bi-info-circle"></i>
                                Clique no botão <i class="bi bi-chevron-right"></i> para expandir e editar todos os detalhes da variante.
                            </p>
                            <table class="table table-hover variant-table">
                                <thead>
                                    <tr>
                                        <th style="width: 40px;"></th>
                                        <th style="width: 180px;">SKU</th>
                                        <th>Atributos</th>
                                        <th style="width: 120px;">Custo (R$)</th>
                                        <th style="width: 80px;" class="text-center">Ativo</th>
                                        <th style="width: 100px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Variants.Count; i++)
                                    {
                                        var variant = Model.Variants[i];
                                        <tr class="variant-row" data-variant-index="@i">
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-secondary toggle-details" data-target="#variant-details-@i">
                                                    <i class="bi bi-chevron-right"></i>
                                                </button>
                                            </td>
                                            <td>
                                                @Html.HiddenFor(m => m.Variants[i].Id)
                                                @Html.TextBoxFor(m => m.Variants[i].Sku, new { @class = "form-control form-control-sm" })
                                            </td>
                                            <td>
                                                <strong>@variant.VariantDescription</strong>
                                                @if (variant.VariantAttributeValuesList != null)
                                                {
                                                    for (int attrIdx = 0; attrIdx < variant.VariantAttributeValuesList.Count; attrIdx++)
                                                    {
                                                        <input type="hidden"
                                                               name="Variants[@i].VariantAttributeValuesList[@attrIdx].AttributeId"
                                                               value="@variant.VariantAttributeValuesList[attrIdx].AttributeId" />
                                                        <input type="hidden"
                                                               name="Variants[@i].VariantAttributeValuesList[@attrIdx].AttributeValueId"
                                                               value="@variant.VariantAttributeValuesList[attrIdx].AttributeValueId" />
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <input type="text"
                                                       class="form-control form-control-sm"
                                                       name="Variants[@i].Cost"
                                                       id="Variants_@(i)__Cost"
                                                       value="@Model.Variants[i].Cost" />
                                            </td>
                                            <td class="text-center">
                                                @Html.CheckBoxFor(m => m.Variants[i].IsActive, new { @class = "form-check-input" })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "EditVariant", new { id = variant.Id }, new { @class = "btn btn-sm btn-outline-primary", target = "_blank" })
                                            </td>
                                        </tr>
                                        <tr class="variant-details-row" id="variant-details-@i" style="display: none;">
                                            <td></td>
                                            <td colspan="5">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Nome da Variante</label>
                                                                    @Html.TextBoxFor(m => m.Variants[i].Name, new { @class = "form-control form-control-sm", placeholder = "Opcional" })
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Descrição</label>
                                                                    @Html.TextAreaFor(m => m.Variants[i].Description, new { @class = "form-control form-control-sm", rows = 2, placeholder = "Opcional" })
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Código de Barras</label>
                                                                    @Html.TextBoxFor(m => m.Variants[i].Barcode, new { @class = "form-control form-control-sm", placeholder = "EAN/GTIN" })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6 class="mb-3">Dimensões e Peso</h6>
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label class="form-label">Peso</label>
                                                                            <div class="input-group input-group-sm">
                                                                                <input type="text"
                                                                                       class="form-control"
                                                                                       name="Variants[@i].Weight"
                                                                                       id="Variants_@(i)__Weight"
                                                                                       value="@Model.Variants[i].Weight" />
                                                                                <span class="input-group-text">kg</span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label class="form-label">Altura</label>
                                                                            <div class="input-group input-group-sm">
                                                                                <input type="text"
                                                                                       class="form-control"
                                                                                       name="Variants[@i].Height"
                                                                                       id="Variants_@(i)__Height"
                                                                                       value="@Model.Variants[i].Height" />
                                                                                <span class="input-group-text">cm</span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label class="form-label">Largura</label>
                                                                            <div class="input-group input-group-sm">
                                                                                <input type="text"
                                                                                       class="form-control"
                                                                                       name="Variants[@i].Width"
                                                                                       id="Variants_@(i)__Width"
                                                                                       value="@Model.Variants[i].Width" />
                                                                                <span class="input-group-text">cm</span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label class="form-label">Comprimento</label>
                                                                            <div class="input-group input-group-sm">
                                                                                <input type="text"
                                                                                       class="form-control"
                                                                                       name="Variants[@i].Length"
                                                                                       id="Variants_@(i)__Length"
                                                                                       value="@Model.Variants[i].Length" />
                                                                                <span class="input-group-text">cm</span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                Este produto ainda não possui variantes. Use o botão "Gerar Novas Variações" para criar.
                            </div>
                        }
                    </div>

                    <div id="new-variants-container">
                        <!-- Novas variações adicionadas via modal aparecerão aqui -->
                    </div>
                </div>

                <!-- Modal para adicionar nova variação -->
                <div class="modal fade" id="addVariantModal" tabindex="-1" aria-labelledby="addVariantModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title" id="addVariantModalLabel">
                                    <i class="bi bi-plus-circle"></i> Adicionar Nova Variação
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Seleção de Atributos -->
                                @if (Model.VariantAttributes != null && Model.VariantAttributes.Any())
                                {
                                    <div class="mb-4">
                                        <h6 class="mb-3"><i class="bi bi-tags"></i> Selecione os Atributos da Variação</h6>
                                        <p class="text-muted small">Selecione <strong>um valor de cada atributo</strong> para criar a variação.</p>

                                        @for (int i = 0; i < Model.VariantAttributes.Count; i++)
                                        {
                                            var attr = Model.VariantAttributes[i];
                                            <div class="mb-3 attribute-selection-group" data-attribute-id="@attr.AttributeId" data-attribute-name="@attr.AttributeName">
                                                <label class="form-label fw-bold">
                                                    <i class="bi bi-tag"></i> @attr.AttributeName <span class="text-danger">*</span>
                                                </label>
                                                <div class="d-flex flex-wrap gap-2">
                                                    @foreach (var value in attr.SelectedValues)
                                                    {
                                                        <div class="form-check">
                                                            <input type="radio"
                                                                   class="form-check-input new-variant-attr-radio"
                                                                   name="NewVariantAttr_@(attr.AttributeId)"
                                                                   value="@value.Id"
                                                                   id="newVariantAttr_@(attr.AttributeId)_@(value.Id)"
                                                                   data-attribute-id="@attr.AttributeId"
                                                                   data-attribute-name="@attr.AttributeName"
                                                                   data-value-name="@value.Value" />
                                                            <label class="form-check-label" for="newVariantAttr_@(attr.AttributeId)_@(value.Id)">
                                                                @value.Value
                                                            </label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        <div id="modal-combination-status" class="alert mt-3" style="display: none;"></div>

                                        <div class="alert alert-secondary mt-3">
                                            <strong>Preview:</strong>
                                            <span id="modal-variant-preview" class="ms-2">Selecione os atributos acima</span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        Nenhum atributo de variação cadastrado.
                                        @Html.ActionLink("Cadastrar atributos", "Index", "ProductAttributes", null, new { target = "_blank" })
                                    </div>
                                }

                                <hr />

                                <!-- Dados da nova variação -->
                                <h6 class="mb-3"><i class="bi bi-box"></i> Dados da Variação</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">SKU <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="newVariantSku" placeholder="Ex: PROD-VAR-001" />
                                            <div id="newVariantSkuFeedback" class="invalid-feedback"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Custo (R$)</label>
                                            <input type="text" class="form-control" id="newVariantCost" placeholder="0.00" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Nome (opcional)</label>
                                            <input type="text" class="form-control" id="newVariantName" placeholder="Nome da variação" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Código de Barras</label>
                                            <input type="text" class="form-control" id="newVariantBarcode" placeholder="EAN/GTIN" />
                                        </div>
                                    </div>
                                </div>

                                <!-- Dimensões (colapsável) -->
                                <div class="accordion" id="dimensionsAccordion">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#dimensionsCollapse">
                                                <i class="bi bi-rulers me-2"></i> Dimensões e Peso (opcional)
                                            </button>
                                        </h2>
                                        <div id="dimensionsCollapse" class="accordion-collapse collapse" data-bs-parent="#dimensionsAccordion">
                                            <div class="accordion-body">
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="mb-3">
                                                            <label class="form-label">Peso</label>
                                                            <div class="input-group input-group-sm">
                                                                <input type="text" class="form-control" id="newVariantWeight" placeholder="0.000" />
                                                                <span class="input-group-text">kg</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="mb-3">
                                                            <label class="form-label">Altura</label>
                                                            <div class="input-group input-group-sm">
                                                                <input type="text" class="form-control" id="newVariantHeight" placeholder="0" />
                                                                <span class="input-group-text">cm</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="mb-3">
                                                            <label class="form-label">Largura</label>
                                                            <div class="input-group input-group-sm">
                                                                <input type="text" class="form-control" id="newVariantWidth" placeholder="0" />
                                                                <span class="input-group-text">cm</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="mb-3">
                                                            <label class="form-label">Comprimento</label>
                                                            <div class="input-group input-group-sm">
                                                                <input type="text" class="form-control" id="newVariantLength" placeholder="0" />
                                                                <span class="input-group-text">cm</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-check mt-3">
                                    <input type="checkbox" class="form-check-input" id="newVariantIsActive" checked />
                                    <label class="form-check-label" for="newVariantIsActive">Variação Ativa</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn btn-success" id="btnAddNewVariant" disabled>
                                    <i class="bi bi-plus-circle"></i> Adicionar Variação
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step Images: Imagens (para produtos configuráveis) -->
                <div class="tab-pane" id="stepImages">
                    <h3>Imagens das Variações</h3>
                    <p class="text-muted">Gerencie as imagens de cada variação. Arraste para reordenar.</p>

                    @if (Model.Variants != null && Model.Variants.Any())
                    {
                        foreach (var variant in Model.Variants)
                        {
                            <div class="variant-images-section mb-4" data-variant-id="@variant.Id">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@variant.VariantDescription</strong>
                                            <span class="badge bg-primary ms-2">SKU: @variant.Sku</span>
                                        </div>
                                        <span class="images-count badge bg-secondary">0 imagens</span>
                                    </div>
                                    <div class="card-body">
                                        <div class="images-grid sortable" id="images-grid-@variant.Id">
                                            <!-- Imagens serão carregadas via JavaScript -->
                                        </div>

                                        <div class="upload-zone" data-variant-id="@variant.Id">
                                            <input type="file" class="file-input" accept="image/*" multiple style="display: none;" />
                                            <div class="upload-content">
                                                <i class="bi bi-cloud-upload" style="font-size: 2rem; color: #6c757d;"></i>
                                                <p class="mb-0 mt-2">Arraste imagens ou clique para selecionar</p>
                                                <small class="text-muted">JPG, PNG, GIF, WebP - Máximo 5MB por imagem</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Nenhuma variação cadastrada. Adicione variações na aba anterior para gerenciar imagens.
                        </div>
                    }
                </div>

                <!-- Step 5: Revisão (para produtos configuráveis) -->
                <div class="tab-pane" id="step5">
                    <h3>Revisão Final</h3>
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Resumo das Alterações</h5>
                        </div>
                        <div class="card-body" id="product-summary">
                            <!-- Será preenchido via JavaScript -->
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <strong>Importante:</strong> Revise todas as alterações antes de salvar.
                    </div>
                </div>
            }
        </div>

        <!-- Navigation -->
        <hr />
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">
                    <i class="bi bi-chevron-left"></i> Anterior
                </button>
                <button type="button" class="btn btn-primary float-end" id="nextBtn">
                    Próximo <i class="bi bi-chevron-right"></i>
                </button>
                <button type="submit" class="btn btn-success float-end" id="submitBtn" style="display: none;">
                    <i class="bi bi-check-circle"></i> Salvar Alterações
                </button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-link float-end" })
            </div>
        </div>
    </div>
}

@helper RenderSubCategories(List<WebApplicationBasic.Models.ViewModels.CategorySelectionViewModel> categories, Guid parentId)
{
    var subCategories = categories.Where(c => c.ParentId == parentId);
    if (subCategories.Any())
    {
        <div style="margin-left: 20px;">
            @foreach (var subCategory in subCategories)
            {
                <div class="category-item" data-id="@subCategory.Id">
                    <label>
                        <input type="checkbox" name="SelectedCategoryIds" value="@subCategory.Id"
                               @(Model.SelectedCategoryIds.Contains(subCategory.Id) ? "checked" : "") />
                        @subCategory.Name
                    </label>
                    @RenderSubCategories(categories, subCategory.Id)
                </div>
            }
        </div>
    }
}

@section Scripts {
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="~/Scripts/product-wizard-edit.js?v=5.3"></script>
    <script src="~/Scripts/product-images.js?v=1.4"></script>

    <style>
