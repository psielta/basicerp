        }

        /* Tabela de variantes expansível */
        .variant-table {
            margin-top: 20px;
        }

        .variant-table thead th {
            background-color: #f8f9fa;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }

        .variant-row {
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .variant-row:hover {
            background-color: #f8f9fa;
        }

        .variant-details-row {
            background-color: #fafafa;
        }

        .variant-details-row .card {
