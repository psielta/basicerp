@model WebApplicationBasic.Models.ViewModels.ProductVariantManagementViewModel

@{
    ViewBag.Title = "Gerenciar Variantes - " + Model.ProductName;
}

<h2>Gerenciar Variantes</h2>
<h3>@Model.ProductName</h3>
<p class="text-muted">Slug: @Model.ProductSlug</p>

<div class="row">
    <div class="col-md-12">
        <div class="p-3 bg-body-secondary rounded">
            <p><strong>Total de Variantes:</strong> @Model.Variants.Count</p>
            <p><strong>Variantes Ativas:</strong> @Model.Variants.Count(v => v.IsActive)</p>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    @Html.ActionLink("Nova Variante", "AddVariant", new { templateId = Model.ProductTemplateId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar para Produtos", "Index", null, new { @class = "btn btn-secondary" })
</div>

@if (Model.Variants.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Nome</th>
                <th>Atributos</th>
                <th>Custo</th>
                <th>Status</th>
                <th>Criado em</th>
                <th>Atualizado em</th>
                <th style="width: 180px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var variant in Model.Variants.OrderBy(v => v.Sku))
            {
                <tr class="@(variant.IsActive ? "" : "text-muted")">
                    <td>
                        <strong>@variant.Sku</strong>
                    </td>
                    <td>@(variant.Name ?? "-")</td>
                    <td>
                        @if (variant.AttributeValues.Any())
                        {
                            <span class="label-group">
                                @foreach (var attr in variant.AttributeValues)
                                {
                                    <span class="badge bg-info">@attr.Key: @attr.Value</span>
                                }
                            </span>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td>
                        @if (variant.Cost.HasValue)
                        {
                            @variant.Cost.Value.ToString("C")
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td>
                        @if (variant.IsActive)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </td>
                    <td>@variant.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@variant.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @Html.ActionLink("Editar", "EditVariant", new { id = variant.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                        @if (variant.IsActive)
                        {
                            @Html.ActionLink("Desativar", "ToggleVariant", new { id = variant.Id }, new { @class = "btn btn-sm btn-warning text-dark", onclick = "return confirm('Deseja desativar esta variante?');" })
                        }
                        else
                        {
                            @Html.ActionLink("Ativar", "ToggleVariant", new { id = variant.Id }, new { @class = "btn btn-sm btn-success" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>Este produto ainda não possui variantes cadastradas.</p>
        @Html.ActionLink("Adicionar primeira variante", "AddVariant", new { templateId = Model.ProductTemplateId }, new { @class = "btn btn-primary" })
    </div>
}

<style>
    .label-group {
        display: inline-block;
    }
    .label-group .badge {
        margin-right: 5px;
    }
</style>