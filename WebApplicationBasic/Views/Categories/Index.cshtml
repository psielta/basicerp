@model IEnumerable<WebApplicationBasic.Models.ViewModels.CategoryListItemViewModel>

@{
    ViewBag.Title = "Categorias";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row mb-3">
    <div class="col-md-12 text-end">
        @Html.ActionLink("Nova Categoria", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Slug</th>
            <th>Caminho</th>
            <th>Categoria Pai</th>
            <th>Criada em</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Nenhuma categoria cadastrada.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Slug</td>
                    <td>@item.Path</td>
                    <td>@item.ParentName</td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-end">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Deseja realmente excluir esta categoria?');" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
