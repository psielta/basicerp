@model WebApplicationBasic.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Esqueceu a senha";
    Layout = "~/Views/Auth/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-header">
        <div class="logo">
            <i class="bi bi-key"></i>
        </div>
        <h2>Redefinir Senha</h2>
        <p>Recupere o acesso à sua conta</p>
    </div>

    <div class="auth-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <div class="info-box">
            <i class="bi bi-info-circle"></i> Digite seu email cadastrado. Se encontrarmos sua conta, enviaremos um link para redefinir sua senha.
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "seu@email.com", required = "required", autofocus = "autofocus", type = "email" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1" })
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-send"></i> Enviar Link de Redefinição
            </button>
        }

        <div class="auth-footer">
            <a href="@Url.Action("Login", "Auth")">
                <i class="bi bi-arrow-left"></i> Voltar ao login
            </a>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        // Focus no campo email
        $('#Email').focus();
    });
</script>
}